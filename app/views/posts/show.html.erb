<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>
<p>
  <strong>Tags</strong>
  <ul>
    <% @post.tags.each do |tag| %>
    <li><%= link_to tag.name, tag %></li>
    <% end %>
  </ul> 
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
